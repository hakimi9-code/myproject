# Environment Variables Configuration
# Copy this file to .env and fill in your values

# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration (PostgreSQL)
# Option 1: Use DATABASE_URL (recommended for cloud databases like Neon, Railway)
DATABASE_URL=postgresql://username:password@host:5432/database

# Option 2: Individual database variables (for local development)
DB_USER=postgres
DB_HOST=localhost
DB_NAME=ecommerce
DB_PASSWORD=your_password
DB_PORT=5432

# JWT Secret (IMPORTANT: Change this in production!)
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# Cloudinary Configuration (for image uploads)
# Sign up at https://cloudinary.com
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# React App API URL (optional - defaults to relative path in production)
# REACT_APP_API_URL=http://localhost:5000/api

